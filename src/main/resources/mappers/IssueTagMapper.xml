<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sys.stm.domains.issueTag.dao.IssueTagRepository">
    <select id="findAllByIssueId" parameterType="long" resultType="com.sys.stm.domains.issueTag.domain.IssueTag">
        SELECT "id", "issue_id", "tag_id"
        FROM "issue_tag"
        WHERE "issue_id" = #{issueId}
    </select>

    <insert id="insertIssueTag">
        INSERT INTO "issue_tag"(
            "issue_id", "tag_id"
        ) VALUES (
                     #{issueId}, #{tagId}
                 )
    </insert>

    <delete id="deleteIssueTagById" parameterType="long">
        DELETE FROM "issue_tag"
        WHERE "id" = #{id}
    </delete>
</mapper>